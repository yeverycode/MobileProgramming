<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Button Style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/tomato_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Custom Outlined Button Style -->
    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/tomato_red</item>
        <item name="android:textColor">@color/tomato_red</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>