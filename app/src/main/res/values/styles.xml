<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Button Style (e.g., "시작" 버튼) -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/tomato_red</item>
        <!-- 글자색을 흰색에서 검은색으로 변경 -->
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Custom Outlined Button Style (e.g., "저장" 버튼) -->
    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- 외곽선 색상을 검은색으로 변경 -->
        <item name="strokeColor">@color/black</item>
        <!-- 글자색을 토마토색에서 검은색으로 변경 -->
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>
